---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
	</head>
	<body>
		<Header />
			<article id="content">
				<slot />
			</article>
		<Footer />
	</body>
</html>

<style>

	body {
		flex: 1;
		padding: 0;
		margin: 0;

		width: 100%;
	}
	#content {
		background-color: rgb(255, 255, 255);
		display: flex;
		flex-direction: column;
		align-items: center;
		flex-grow: 1;
		
	}
</style>
