---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../base.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
	</head>
	<body>
		<Header />
		<article id="content">
			<slot />
		</article>
		<Footer />
	</body>
</html>

<style>
	body {
		padding: 0;
		margin: 0;
		width: 100%;
		display: flex;
		min-height: 100vh;
		flex-direction: column;
		background: var(--background, #737373);
	}
	#content {
		display: flex;
		flex: 1;
		padding: 10px;
		flex-direction: column;
		align-items: center;
	}
</style>
