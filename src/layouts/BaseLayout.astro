---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../base.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
	</head>
	<body>
		<div id="main">
			<Header />
			<article id="content">
				<slot />
			</article>
			<Footer />
		</div>
	</body>
</html>

<style>
	body {
		padding: 0;
		margin: 0;
		background: var(--background, #737373);
	}
	#main {
		display: flex;
		min-height: 100vh;
		flex-direction: column;
	}
	#content {
		display: flex;
		flex: 1;
		padding: 10px;
		flex-direction: column;
		align-items: center;
	}
</style>
